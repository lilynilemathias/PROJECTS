<form action="/maincharacters/<%= @main_character.id %>" method="post">
	<input type="hidden" name="_method" value="put">
	<label for="mainchar[name]">Name</label>
	<br>
	<input type="text" name="mainchar[name]" value="<%= @main_character.name %>">
	<br>
	<label for="mainchar[country]">Country</label>
	<br>
	<input type="text" name="mainchar[country]" value="<%= @main_character.country %>">
	<br>
	<label for="mainchar[bio]">Bio</label>
	<br>
	<input type="text" name="mainchar[bio]" value="<%= @main_character.bio %>">
	<br>
	<label for="mainchar[pic]">Picture</label>
	<br>
	<input type="text" name="mainchar[pic]" value="<%= @main_character.pic %>">
	<br>
	<input type="submit">
